@model MovieRentalMvcApp.ViewModels.NewMovieViewModel
@{
    /**/

    ViewBag.Title = "New";
}

<h2>New Movie</h2>

@using (Html.BeginForm("Save", "Movie"))  //<!--<form>-->!>

{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Id)
        @Html.TextBoxFor(m => m.Movie.Id, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.MovieName)
        @Html.TextBoxFor(m => m.Movie.MovieName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.DateAdded)
        @Html.TextBoxFor(m => m.Movie.DateAdded, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.CdStock)
        @Html.TextBoxFor(m => m.Movie.CdStock, new { @class = "form-control" })
    </div>
    @*<div class="form-group">
            @Html.LabelFor(m => m.Movie.Genre)
            @Html.TextBoxFor(m => m.Movie.Genre, new { @class = "form-control" })
        </div>*@

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genre)
        @Html.DropDownListFor(m => m.Movie.Genre, new SelectList(Model.Genres, "Id", "GenreName"), "SelectGenres",
                         new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Movie.Id)
    <button class="=btn btn-primary" type="submit">Save</button>

}
